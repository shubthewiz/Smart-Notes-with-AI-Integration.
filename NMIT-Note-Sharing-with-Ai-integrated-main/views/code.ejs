<!DOCTYPE html>
<html>
<head>
  <title>Code Playground | NMIT Smart Notes</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">

  <!-- âœ… Ace Editor CDN (VS Code-like feel) -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.32.0/ace.js" integrity="" crossorigin="anonymous"></script>

  <style>
    body {
      font-family: "Poppins", sans-serif;
      background: #020617;
      color: #e5e7eb;
      margin: 0;
      padding: 20px;
    }

    .playground-container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .heading {
      text-align: center;
      margin-bottom: 20px;
    }

    .heading h1 {
      font-size: 28px;
      color: #e5e7eb;
    }

    .heading p {
      color: #9ca3af;
      font-size: 14px;
    }

    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 10px;
      gap: 10px;
      flex-wrap: wrap;
    }

    .top-bar select,
    .top-bar input {
      padding: 8px 12px;
      border-radius: 8px;
      border: 1px solid #374151;
      background: #030712;
      color: #e5e7eb;
      outline: none;
      font-size: 13px;
    }

    .btn-run {
      padding: 10px 20px;
      background: linear-gradient(135deg, #22c55e, #16a34a);
      border-radius: 999px;
      border: none;
      color: white;
      font-weight: 600;
      cursor: pointer;
      font-size: 14px;
      box-shadow: 0 0 20px rgba(34, 197, 94, 0.4);
    }

    .btn-run:hover {
      transform: scale(1.03);
    }

    .editor-output-wrapper {
      display: grid;
      grid-template-columns: 3fr 2fr;
      gap: 15px;
      margin-top: 15px;
    }

    #editor {
      height: 430px;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 20px 40px rgba(0,0,0,0.6);
    }

    .panel {
      background: #020617;
      border-radius: 12px;
      padding: 10px 12px;
      border: 1px solid #1f2937;
      box-shadow: 0 20px 40px rgba(0,0,0,0.6);
      height: 430px;
      display: flex;
      flex-direction: column;
    }

    .panel h3 {
      font-size: 14px;
      margin-bottom: 6px;
      color: #e5e7eb;
    }

    .panel textarea {
      flex: 1;
      background: #020617;
      border: none;
      outline: none;
      resize: none;
      color: #e5e7eb;
      font-family: "Fira Code", monospace;
      font-size: 13px;
    }

    .output-box {
      flex: 1;
      background: #000000;
      color: #22c55e;
      padding: 8px;
      border-radius: 8px;
      font-family: "Fira Code", monospace;
      font-size: 13px;
      overflow-y: auto;
      white-space: pre-wrap;
    }

    .error-text {
      color: #f97316;
    }

    .compile-text {
      color: #facc15;
    }

    .toolbar-bottom {
      margin-top: 8px;
      display: flex;
      justify-content: space-between;
      font-size: 11px;
      color: #6b7280;
    }

    .save-status {
      font-style: italic;
    }

    .btn-small {
      background: #111827;
      border-radius: 999px;
      padding: 4px 10px;
      border: 1px solid #374151;
      color: #9ca3af;
      font-size: 11px;
      cursor: pointer;
    }

    .btn-small:hover {
      color: #e5e7eb;
      border-color: #6b7280;
    }

    @media (max-width: 900px) {
      .editor-output-wrapper {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>

<body>
  <div class="playground-container">
    <div class="heading">
      <h1>ðŸ’» Code Playground</h1>
      <p>Practice C, Java, Python & JavaScript directly in your browser.</p>
    </div>

    <div class="top-bar">
      <div>
        <label style="font-size:13px;margin-right:6px;">Language:</label>
        <select id="language-select">
          <option value="c">C</option>
          <option value="java">Java</option>
          <option value="python">Python</option>
          <option value="js">JavaScript</option>
        </select>
      </div>

      <div>
        <input id="snippet-name" placeholder="Snippet name (optional)" />
      </div>

      <button class="btn-run" onclick="runCode()">â–¶ Run Code</button>
    </div>

    <div class="editor-output-wrapper">
      <!-- Editor -->
      <div id="editor"></div>

      <!-- Right Side: Input + Output -->
      <div class="panel">
        <h3>Input (stdin)</h3>
        <textarea id="stdin" placeholder="Enter input if needed..."></textarea>

        <h3 style="margin-top:10px;">Output</h3>
        <div id="output" class="output-box">// Output will appear here...</div>

        <div class="toolbar-bottom">
          <button class="btn-small" onclick="saveSnippet()">ðŸ’¾ Save</button>
          <span id="save-status" class="save-status"></span>
        </div>
      </div>
    </div>
  </div>

  <script>
    // âœ… Initialize Ace Editor
    const editor = ace.edit("editor");
    editor.setTheme("ace/theme/one_dark");
    editor.session.setMode("ace/mode/c_cpp");
    editor.setValue(`#include <stdio.h>\n\nint main() {\n    printf("Hello NMIT!\\n");\n    return 0;\n}`, -1);

    const languageSelect = document.getElementById("language-select");
    const outputBox = document.getElementById("output");
    const saveStatus = document.getElementById("save-status");

    const defaultTemplates = {
      c: `#include <stdio.h>\n\nint main() {\n    printf("Hello NMIT!\\n");\n    return 0;\n}\n`,
      java: `public class Main {\n  public static void main(String[] args) {\n    System.out.println("Hello NMIT!");\n  }\n}\n`,
      python: `print("Hello NMIT!")\n`,
      js: `console.log("Hello NMIT!");\n`
    };

    languageSelect.addEventListener("change", () => {
      const lang = languageSelect.value;
      if (lang === "c") editor.session.setMode("ace/mode/c_cpp");
      if (lang === "java") editor.session.setMode("ace/mode/java");
      if (lang === "python") editor.session.setMode("ace/mode/python");
      if (lang === "js") editor.session.setMode("ace/mode/javascript");

      editor.setValue(defaultTemplates[lang], -1);
    });

    async function runCode() {
      outputBox.textContent = "â³ Running...";
      outputBox.classList.remove("error-text", "compile-text");

      const code = editor.getValue();
      const language = languageSelect.value;
      const stdin = document.getElementById("stdin").value;

      try {
        const res = await fetch("/run-code", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ language, code, stdin })
        });

        const data = await res.json();

        if (data.error) {
          outputBox.textContent = "âŒ " + data.error;
          outputBox.classList.add("error-text");
          return;
        }

        let finalOutput = "";

        if (data.compile_output) {
          finalOutput += "ðŸ’¡ Compile Output:\n" + data.compile_output + "\n\n";
        }

        if (data.stdout) {
          finalOutput += "âœ… Program Output:\n" + data.stdout;
        }

        if (data.stderr) {
          finalOutput += "\n\nâš  Runtime Error:\n" + data.stderr;
          outputBox.classList.add("error-text");
        }

        if (!finalOutput.trim()) {
          finalOutput = "No output.";
        }

        outputBox.textContent = finalOutput;

      } catch (err) {
        console.error(err);
        outputBox.textContent = "âŒ Something went wrong.";
        outputBox.classList.add("error-text");
      }
    }

    // âœ… Simple local save (per browser)
    function saveSnippet() {
      const name = document.getElementById("snippet-name").value || "default-snippet";
      const language = languageSelect.value;
      const code = editor.getValue();

      const payload = { language, code };
      localStorage.setItem("snippet-" + name, JSON.stringify(payload));
      saveStatus.textContent = "Saved locally âœ”";
      setTimeout(() => (saveStatus.textContent = ""), 2000);
    }
  </script>
</body>
</html>
